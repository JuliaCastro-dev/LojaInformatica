@model LojaInfo.Models.Produto 
@{ 
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Atualizar Cliente</title>
    <link href="~/Content/editarCliente.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,200;1,200&display=swap" rel="stylesheet">
</head>
<body>
    <div class="center">
        @Html.ActionLink("<-", "Produtos", new { htmlAttributes = new { @class = "link" } })
        <img class="logo" src="~/Imagens/Logo.png" />
        <h1 class="text-center mb-2">Atualize os dados do Produto</h1>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.produto)

            <div class="txt_field">

                @Html.EditorFor(model => model.produto, new { htmlAttributes = new { @class = "input" } })
                
            </div>
         
            <div class="txt_field">

                @Html.EditorFor(model => model.desc_produto, new { htmlAttributes = new { @class = "input" } })
                @Html.ValidationMessageFor(model => model.desc_produto, "", new { @class = "text-danger" })
            </div>


            <div class="txt_field">

                @Html.EditorFor(model => model.qt_estoque, new { htmlAttributes = new { @class = "input" } })
                @Html.ValidationMessageFor(model => model.qt_estoque, "", new { @class = "text-danger" })
            </div>

           
            
            <div class="txt_field">

                @Html.EditorFor(model => model.img, new { htmlAttributes = new { @class = "input" } })
                @Html.ValidationMessageFor(model => model.img, "", new { @class = "text-danger" })
            </div>




            <button type="submit" class="Salvar">Salvar</button>

        }
    </div>
</body>
</html>



